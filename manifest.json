{
  "manifest_version": 2,

  "name": "Lightspeed Web Filter",
  "description": "This extension verifies the URL against Lightspeed's open database.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "settings.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "activeTab",
    "storage",
    "webRequestBlocking",
    "webRequest",
    "<all_urls>"
  ]
}
